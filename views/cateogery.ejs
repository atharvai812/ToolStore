<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/style.css">

    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/hero.css">
    <link rel="stylesheet" href="/stylesheets/tools.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="shortcut icon" href="/images/software-development.png" type="image/x-icon">
    <title>Tool Store</title>
</head>

<body>
    <header class="header">
        <nav>
            <div class="logo">
                <img src="/images/software-development.png" alt="">
                <a href="/">Tool.<span>Store</span></a>
            </div>
            <input type="checkbox" id="menu-toggle">
            <label for="menu-toggle" class="menu-icon">&#9776;</label>
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/profile">Profile</a></li>
            </ul>
        </nav>
    </header>

    <div class="hero">
        <h1>All Categories</h1>
        <h2>Browse all categories at one glance</h2>

        <div class="search">
            <form action="/search" method="get">
                <input type="text" name="q" placeholder="Search tools" id="search">
                <button style="border: none; " type="submit"><i class="bi bi-search" id="search"></i></button>
            </form>
        </div>
        


        <div class="categories-menu">
            <!-- <button class="category-btn" data-category="0">All Categories</button> -->
            <button class="category-btn" data-category="1">Text</button>
            <button class="category-btn" data-category="2">Image</button>
            <button class="category-btn" data-category="3">Business </button>
            <button class="category-btn" data-category="4">coding</button>
            <button class="category-btn" data-category="5">Marketing</button>
            <button class="category-btn" data-category="6">Educational</button>
            <button class="category-btn" data-category="7">Extensions</button>
            <button class="category-btn" data-category="8">Productivity</button>
            <button class="category-btn" data-category="9">Presentation</button>
            <button class="category-btn" data-category="10">Miscellaneous</button>
        </div>
    </div>



    <div class="tools">
        <% tools.forEach(function(tool){ %>

            <div class="tool" data-category="<%= tool.category %>">
                <div  class="img">

                    <img src="/images/uploads/<%= tool.image %>" alt="">
                </div>
                <div class="head-star">
                    <h3><%= tool.toolname%></h3>
                </div>
                <p><%= tool.description%></p>

                <div class="category">
                    <a href="">free</a>
                    <a href="" id="athya">GPT</a>
                    <a href="">Website</a>
                </div>
                <a href="<%= tool.link%>" target="_blank">
                    <button onclick="">Open Site</button>
                </a>
            </div>
        <% }) %>
    </div>

    <footer>
        <div class="footer">
            <div class="info">
                <h3>Contact ToolStore</h3>
                <a href="mailto:ToolStore@gmail.com" class="bi bi-envelope"> ToolStore@gmail.com</a>
                <a href="phone" class="bi bi-phone"> +91 1234567890</a>
                <a href="address" class="bi bi-geo-alt"> Address</a>
            </div>

            <div class="links">
                <h3>Links</h3>
                <a href="/">Go to Top</a>
                <a href="/">Home</a>
                <a href="/NewTool">Add Tool</a>
                <a href="/cateogery">Categories</a>
                <a href="/profile">Profile</a>
            </div>
        </div>

        <div class="footer-bottom">


            <!-- add toolstore -->
            <div class="social">
                <a href=""><i class="bi bi-facebook"></i></a>
                <a href=""><i class="bi bi-twitter"></i></a>
                <a href=""><i class="bi bi-instagram"></i></a>
                <a href=""><i class="bi bi-linkedin"></i></a>

            </div>

           <strong> <p>All Rights Reserved. &copy; Tool<span>Store</span>2023</strong></p>


        </div>

    </footer>


    <script src="/javascripts/category.js"></script>

</body>

</html>